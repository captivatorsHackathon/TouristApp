<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IndiaGateInfo">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="12dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp"
                        >

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="35dp"
                            >

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="300dp"
                                >
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/india_gate"
                                    android:scaleType="centerCrop"
                                    android:layout_centerInParent="true"
                                    android:id="@+id/Image1"
                                    />
                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:layout_margin="12dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="The India Gate is a war memorial located astride the Rajpath, on the eastern edge of the ceremonial axis of New Delhi, formerly called Kingsway."
                >
            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Architect"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_margin="4dp"
                >

            </TextView>
            <TextView
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Edwin Lutyens">

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ADDRESS:"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_margin="4dp"
                >

            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"
                android:layout_height="match_parent"
                android:text="Rajpath, India Gate, New Delhi, Delhi 110001"
                >
            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="VISITING HOURS:"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_margin="4dp"
                >
            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"
                android:layout_height="match_parent"
                android:text="07:00 PM and 09:30 PM."
                >
            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="discover"
                    android:id="@+id/discover_India_Gate"
                    android:layout_margin="12dp"
                    android:textColor="#ffffff"
                    android:backgroundTint="#45B6Fe">
                </Button>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="food"
                    android:id="@+id/food_India_Gate"
                    android:layout_margin="12dp"
                    android:textColor="#ffffff"
                    android:backgroundTint="#45B6Fe">
                </Button>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="market"
                    android:id="@+id/market_India_Gate"
                    android:layout_margin="12dp"
                    android:textColor="#ffffff"
                    android:backgroundTint="#45B6Fe">
                </Button>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>