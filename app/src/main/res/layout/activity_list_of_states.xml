<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListOfStates"
    android:background="#D3D3D3">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="330dp"
                        android:orientation="horizontal"
                        >

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:elevation="12dp"
                            android:layout_margin="12dp"
                            >
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                >

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="220dp"
                                    android:src="@drawable/uttar"
                                    android:scaleType="centerCrop"
                                    android:layout_centerInParent="true"
                                    android:id="@+id/Image4"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Uttar Pradesh "
                                    android:textSize="16sp"
                                    android:layout_below="@id/Image4"
                                    android:layout_centerHorizontal="true"
                                    android:layout_margin="8dp"
                                    >
                                </TextView>
                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/UPButton"
                                    android:background="@android:color/transparent"
                                    />

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="330dp"
                android:orientation="horizontal"
                >

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:elevation="12dp"
                    android:layout_margin="12dp"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="220dp"
                            android:src="@drawable/rajasthan"
                            android:scaleType="centerCrop"
                            android:layout_centerInParent="true"
                            android:id="@+id/Image5"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rajasthan"
                            android:textSize="16sp"
                            android:layout_below="@id/Image5"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="8dp"
                            >
                        </TextView>
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/RajasthanButton"
                            android:background="@android:color/transparent"
                            />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="330dp"
                android:orientation="horizontal"
                >

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:elevation="12dp"
                    android:layout_margin="12dp"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="220dp"
                            android:src="@drawable/delhi"
                            android:scaleType="centerCrop"
                            android:layout_centerInParent="true"
                            android:id="@+id/Image6"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Delhi"
                            android:textSize="16sp"
                            android:layout_below="@id/Image6"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="8dp"
                            >
                        </TextView>
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/DelhiButton"
                            android:background="@android:color/transparent"
                            />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>